{
    "name": "Debug ANTLR4 grammar",
    "type": "antlr-debug",
    "request": "launch",
    // Archivo con la gramatica
    "grammar": "${file}",
    // Archivo a parsear
    "input": "src/codigo.txt",
    // Simbolo inicial
    "startRule": "s",
    // Muestra Arbol Sintactico
    "printParseTree": true,
    "visualParseTree": true,
    "configurations": [
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "tc.dec.App",
            "projectName": "tcfinal"
        }
    ]
}